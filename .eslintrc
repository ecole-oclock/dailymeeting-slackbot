{
  "extends": "airbnb",
  "rules": {
    // Indent with 2 spaces
    "indent": [2, 4, { "SwitchCase": 1}],
    // Indent JSX with 2 spaces
    "react/jsx-indent": [
      "error",
      4
    ],
    "max-len": [
      "error",
      140,
      4,
      {
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "quotes": [2, "single", { "allowTemplateLiterals": true, "avoidEscape": true }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "src",
            "./src"
          ]
        ],
        "extensions": [
          ".ts",
          ".js",
          ".jsx",
          ".json"
        ]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}

{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "dist/*": [
        "dist/*"
      ],
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ],
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1",
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}